{
  "manifest_version": 2,

  "name": "Point of Tickets",
  "description": "Chrome Extension for Printing Software Tickets on Receipt Paper",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["ticket-builders/github.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
